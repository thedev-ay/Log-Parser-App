{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "lib": ["esnext"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "lib",
      "sourceMap": false,
      "stripInternal": true
      },
      "exclude": ["node_modules"]
}